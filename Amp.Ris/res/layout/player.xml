<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inactive_layout"
            android:visibility="gone">

        <ImageView
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:layout_width="@android:dimen/notification_large_icon_width"
                android:id="@+id/launch"
                android:src="@android:drawable/ic_dialog_alert"
                android:background="@drawable/btn_dark_transparent_rounded"/>

        <TextView
                android:gravity="center"
                android:layout_gravity="fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/id_mpris" />

        <TextView
            android:gravity="center"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300sp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:text="@string/inactive_player"/>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/active_layout">

        <LinearLayout
                android:layout_gravity="fill"
                android:layout_above="@+id/controls"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center">

            <TextView
                    android:id="@+id/line1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textStyle="bold"
                    />

            <TextView
                    android:id="@+id/line2"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    />

            <ImageView
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_width="@android:dimen/thumbnail_width"
                    android:layout_height="@android:dimen/thumbnail_height"
                    android:scaleType="fitCenter"
                    android:id="@+id/img"/>

            <TextView
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:id="@+id/from"
                    android:text="@string/from_album" />

            <TextView
                    android:id="@+id/line3"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    />

        </LinearLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:id="@id/controls">

            <include layout="@layout/player_controls"/>

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
